{% include 'layout/parts/admin-header.twig' %}

<head>
    <link rel="stylesheet" href="/../../assets/css/admin-css/add-personel.css">
</head>
<body>
<div class="container">
    <form action="/admin/workspace/add-personel" method="post">
        <h1>Sign up</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>

        <label for="fname"><b>Firstname</b></label>
        <input type="text" placeholder="Firstname" name="fname" required>

        <label for="lname">Lastname</label>
        <input type="text" placeholder="Lastname" name="lname" required>

        <label for="email">Email</label>
        <input type="email" placeholder="Email" name="email" required>

        <label for="city">City</label>
        <input type="text" placeholder="City" name="city" required>

        <label for="street">Street</label>
        <input type="text" placeholder="Street" name="street" required>

        <label for="hnum">House number</label>
        <input type="text" placeholder="Housenumber" name="hnum" required>

        <label for="postal">Postal code</label>
        <input type="text" placeholder="Postal code" name="postal" required>

        <label for="role1">Emoloyee</label>
        <input type="radio" id="role1" name="role" value="2">
        <label for="role2">Administrator</label>
        <input type="radio" id="role2" name="role" value="3">

        <label for="pas1">Password</label>
        <input type="password" placeholder="Password" name="pas1" required>

        <label for="pas2">Password</label>
        <input type="password" placeholder="Password confirmation" name="pas2" required>

        <div class="clearfix">
            <button type="submit" class="signupbtn">Sign up</button>
            <button type="button" onclick="location.href='/admin/workspace'" class="cancelbtn">Cancel</button>
        </div>
    </form>
</div>
</body>
</html>