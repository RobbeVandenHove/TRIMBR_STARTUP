{% include 'layout/parts/admin-header.twig' %}

<head>
    <link rel="stylesheet" href="/../../assets/css/admin-css/admin.css">
</head>
<body>
    <form action="/admin" method="post">
        <h1>Administrator area</h1>
        <div class="formcontainer">
            <hr/>
            <div class="container">
                <label for="admin-uname"><strong>Username</strong></label>
                <input type="text" placeholder="Enter Username" name="admin-uname"  value="{{ uname ? uname : '' }}" autocomplete="off" required>
                <label for="admin-password"><strong>Password</strong></label>
                <input type="password" placeholder="Enter Password" name="admin-password" required>
            </div>
            <button type="submit">Login</button>
        </div>
    </form>
</body>
</html>